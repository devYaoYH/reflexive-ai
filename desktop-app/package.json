{
  "name": "llm-tracker-desktop",
  "version": "1.0.0",
  "description": "LLM Tracker Desktop App - Analytics and Data Storage",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "NODE_ENV=development electron .",
    "test": "jest",
    "test:watch": "jest --watch",
    "build": "electron-builder",
    "package": "electron-builder --mac",
    "package-win": "electron-builder --win",
    "package-linux": "electron-builder --linux"
  },
  "dependencies": {
    "better-sqlite3": "^11.8.0",
    "ws": "^8.14.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "jest": "^29.7.0"
  },
  "build": {
    "appId": "com.llmtracker.desktop",
    "productName": "LLM Tracker",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "database.js",
      "websocket-server.js",
      "renderer/**/*",
      "database-schema.sql"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": ["dmg", "zip"]
    },
    "linux": {
      "target": ["AppImage", "deb"]
    },
    "win": {
      "target": ["nsis", "portable"]
    }
  }
}
